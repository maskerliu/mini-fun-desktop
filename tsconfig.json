{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "noEmitOnError": true,
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "suppressExcessPropertyErrors": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}